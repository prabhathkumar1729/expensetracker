@using System.Globalization
@using BlazorWalletTrackerFE.Shared.Models;


<div class="container my-5">
    <div class="row">
        <div class="col">
            <RadzenChart>
                <RadzenLineSeries Smooth="true" Data="@noOfTransactionsStatistics" CategoryProperty="Month" Title="Transactions" ValueProperty="TotalNumberOfTransactionsInTheMonth" RenderingOrder="0">
                    <RadzenSeriesTrendLine Visible="@trend" Stroke="var(--rz-danger-dark)" LineType="LineType.Dashed" />
                    <RadzenSeriesMedianLine Visible="@median" Stroke="var(--rz-success-dark)" LineType="LineType.Solid" />
                    <RadzenSeriesMeanLine Visible="@mean" Stroke="var(--rz-info-dark)" LineType="LineType.Dotted" />
                    <RadzenSeriesModeLine Visible="@mode" Stroke="var(--rz-warning-darker)" LineType="LineType.Dotted" />
                </RadzenLineSeries>
                <RadzenCategoryAxis Padding="5" />
                <RadzenValueAxis>
                    <RadzenGridLines Visible="true" />
                    <RadzenAxisTitle Text="Number of Transactions" />
                </RadzenValueAxis>
            </RadzenChart>
        </div>
    </div>
</div>

@code {
    bool trend = true;
    bool median = true;
    bool mean = true;
    bool mode = true;

    [Parameter]
    public NoOfTransactionsStatistics[]? noOfTransactionsStatistics { get; set; }

    protected override void OnInitialized()
    {
        Console.WriteLine(" I started Transactions Trends Component");
        base.OnInitialized();
        Console.WriteLine(" I finished Transactions Trends Component");
    }
}